extends layout

block content

  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in genre_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This genre has no books

    form(action=`${genre.url}/update` method="GET")
      button(type="submit") Edit Genre

    form(action=`${genre.url}/delete` method="POST")
      button(type="submit") Delete Genre
